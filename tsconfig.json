{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~data/*": ["data/*"],
      "~components/*": ["components/*"],
      "~hooks/*": ["hooks/*"],
      "~layouts/*": ["layouts/*"],
      "~styles/*": ["styles/*"],
      "~helpers/*": ["helpers/*"],
      "~types/*": ["types/*"],
      "~constants/*": ["constants/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "scripts/generateRSS.mjs"],
  "exclude": ["node_modules"]
}
